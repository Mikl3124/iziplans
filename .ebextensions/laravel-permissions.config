container_commands:
  01-storage-set-permissions:
    test: test -d "storage"
    command: sudo chgrp -R webapp storage
  02-storage-set-permissions:
    test: test -d "storage"
    command: sudo chmod -R ug+wx storage
  03-storage-set-permissions:
    command: sudo chown -R webapp:webapp storage 
  # Ensure the bootstrap/cache folder is writable if it exists.
  04-bootstrap-set-permissions:
    test: test -d "bootstrap/cache"
    command: sudo chgrp -R webapp bootstrap/cache
  05-bootstrap-set-permissions:
    test: test -d "bootstrap/cache"
    command: sudo chmod -R ug+wx bootstrap/cache
  06-bootstrap-set-permissions:
    command: sudo chown -R webapp:webapp bootstrap/cache